<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.carlocriniti.android.permission_explorer"
      android:versionCode="9"
      android:versionName="3.1"
      android:installLocation="auto">
    <uses-sdk android:minSdkVersion="7"
    		  android:targetSdkVersion="8" />
    
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity android:name=".Main"
                  android:label="@string/app_name"
                  android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CategoryDetail" />
        <activity android:name=".ApplicationDetail" />
        <activity android:name=".PermissionDetail" />
        <activity android:name=".Preference" />
    </application>
</manifest>